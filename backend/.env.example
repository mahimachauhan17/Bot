# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
MONGODB_URI=mongodb://localhost:27017/
MONGODB_NAME=interviewer_ai_db

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI API - TODO: Add your API key
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Google Cloud Speech-to-Text - TODO: Add your credentials
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/google-credentials.json
GOOGLE_CLOUD_PROJECT_ID=your-project-id

# Azure Speech Services - TODO: Add your credentials
AZURE_SPEECH_KEY=your-azure-speech-key-here
AZURE_SPEECH_REGION=your-azure-region

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Settings - TODO: Configure your email provider
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# WebRTC Settings
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Calendar Integration - TODO: Add OAuth credentials
GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=your-client-secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:8000/api/calendar/callback

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Interview Settings
DEFAULT_INTERVIEW_DURATION=3600  # 1 hour in seconds
VIDEO_RECORDING_ENABLED=True
BODY_LANGUAGE_ANALYSIS_ENABLED=True
